# Application Environment
NODE_ENV=development
PORT=5000

# Database
MONGODB_URI=mongodb://localhost:27017/money-transfer-comparison

# Authentication
JWT_SECRET=your_jwt_secret_should_be_long_and_secure
JWT_EXPIRE=30d
JWT_COOKIE_EXPIRE=30

# API Security
ENCRYPTION_KEY=32_character_encryption_key_for_apis

# Wise API (formerly TransferWise)
WISE_API_KEY=your_wise_api_key_here
WISE_API_URL=https://api.wise.com/v1

# Other Provider APIs (add as needed)
XE_API_KEY=your_xe_api_key_here
XE_API_SECRET=your_xe_api_secret_here
XE_API_URL=https://xecdapi.xe.com/v1

# Caching and Rate Limiting
CACHE_TIMEOUT=3600 # 1 hour in seconds
API_RATE_LIMIT=100 # requests per 15 minutes